@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}


   
        
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Check in</th>
                            <th>Check out</th>
                            <th>Status</th>
                            <th>Approve</th>
                            <th>Cancel</th>
                            <th>Hold</th>
                            <th>Update</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model){
                            count++;
                            <tr>
                            <th>@count</th>
                            <td>@item.Name</td>
                            <td>@item.Checkin</td>
                            <td>@item.Checkout</td>
                            <td>
                                <span class="badge badge-primary px-2">@item.Status</span>
                            </td>
                    <td><a href="/BookingAdmin/ApproveReservation/@item.BookingID?status=Approved" class="btn btn-outline-primary">Approve</a></td>
                    <td><a href="/BookingAdmin/ApproveReservation/@item.BookingID?status=Cancelled" class="btn btn-outline-danger">Cancel</a></td>
                    <td><a href="/BookingAdmin/ApproveReservation/@item.BookingID?status=On Hold" class="btn btn-outline-warning">Hold</a></td>
                    <td><a href="#" class="btn btn-outline-info">Update</a></td>
                            <td><a href="#" class= "btn btn-outline-dark">Details</a></td>
                            
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    

